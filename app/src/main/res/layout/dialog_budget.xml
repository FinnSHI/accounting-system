<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/dialog_budget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_budget"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/dialog_budget_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ih_error"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/dialog_budget_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_budget_title"
        android:layout_marginTop="10dp"
        android:text="HK$"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/dialog_budget_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/dialog_budget_money"
        android:layout_toRightOf="@id/dialog_budget_money"
        android:background="@color/white"
        android:inputType="numberDecimal">

        <requestFocus />
    </EditText>
    <Button
        android:id="@+id/dialog_budget_btn_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_budget_money"
        android:layout_marginTop="20dp"
        android:text="@string/enter"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/description_enter_btn_bg"
        android:textColor="@color/white"/>
</RelativeLayout>